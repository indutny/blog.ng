<!DOCTYPE html>
<html>
  <head>
    {{>head}}
  </head>
  <body>
    {{>aside}}
    <section id=content>
      <article class=post>
        <section class=post-header>
          <button class=votenow title=upvote>?</button>
          <h1>{{title}}</h1>
          <span class=post-header-date>{{date}}</span>
        </section>

        <section class=post-body>
          {{{contents}}}
        </section>
      </article>
    </section>
    {{>footer}}
  </body>
</html>
